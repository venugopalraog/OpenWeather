<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_grey_50"
    android:gravity="center"
    android:minHeight="60dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/weather_forecast_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            tools:src="@drawable/ic_sunny"/>

        <TextView
            android:id="@+id/weather_forecast_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_800"
            android:textSize="16sp"
            tools:text="Sunny"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weather_forecast_day_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/icon_container"
        android:layout_toEndOf="@+id/icon_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weather_forecast_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_800"
            android:textSize="24sp"
            tools:text="Monday"/>

        <TextView
            android:id="@+id/weather_forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_800"
            android:textSize="18sp"
            tools:text="Oct 13 2017"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weather_forecast_max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_800"
            android:textSize="18sp"
            tools:text="Max 10"/>

        <TextView
            android:id="@+id/weather_forecast_min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_800"
            android:textSize="18sp"
            tools:text="Min 30"/>

    </LinearLayout>
</RelativeLayout>